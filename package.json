{
  "name": "@static-pages/twig-writer",
  "version": "0.1.0",
  "description": "Twig template engine for Static Pages.",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "browser": "lib/esm/index.js",
  "scripts": {
    "prepack": "npm run build",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --outDir lib/esm",
    "build:cjs": "tsc --outDir lib/cjs --module commonjs",
    "watch:esm": "tsc --watch --outDir lib/esm",
    "watch:cjs": "tsc --watch --outDir lib/cjs --module commonjs",
    "test": "eslint src && jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/staticpagesjs/twig-writer.git"
  },
  "keywords": [
    "static",
    "pages",
    "generator",
    "renderer",
    "mvc",
    "jamstack",
    "view",
    "template",
    "controller",
    "twig",
    "writer"
  ],
  "author": "László BULIK",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/staticpagesjs/twig-writer/issues"
  },
  "homepage": "https://staticpagesjs.github.io/",
  "peerDependencies": {
    "@static-pages/core": "^1.0.0"
  },
  "dependencies": {
    "twing": "^5.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.0.1",
    "jest": "^27.3.1",
    "js-yaml": "^4.1.0"
  }
}
